<%= form_with model: @article,local:true do |f| %>
  <div class="form-group px-3">
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group px-3">
    <%= f.label :タイトル %>
    <%= f.text_field :title, placeholder: "タイトルをいれてください", class: 'form-control article_title' %>
  </div>
  <div class="form-group px-3">
    <%= f.label :記事 %>
    <%= f.text_area :body, placeholder: "記事を書きましょう！ハッシュタグ#を記事に入れてみましょう！（例）#マンデリン　#エチオピア　#ナチュラル　", class: 'form-control article_body' %>
  </div>
  <div class="form-group px-3">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

