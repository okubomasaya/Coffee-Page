<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <!--ユーザー情報-->
      <%= render 'users/info', user: @article.user %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<div class="card-mb-3 mt-3">
        <div class="card-image">
  		      <%= link_to article_path(@article.id) do %>
              <%= attachment_image_tag @article, :image, class:"card-img-top"; %>
            <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title far fa-flag"><%= @article.title %></h5>
          <p class="card-text"><%= render_with_hashtags( simple_format(@article.body)) %></p>
          <p class="card-text"><small class="text-muted">いいね数: <%= @article.favorites.count %></small></p>
          <% if @article.user == current_user %>
            <i><%= link_to '編集', edit_article_path(@article), class: "btn btn-sm btn-success edit_book_#{@article.id}" %></i>
            <i><%= link_to '削除', article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@article.id}"%></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>