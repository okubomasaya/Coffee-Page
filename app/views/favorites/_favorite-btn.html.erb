<% if article.favorited_by?(current_user) %>
  <%= link_to article.favorites.count, article_favorites_path(article), method: :delete, remote: true, class: "far fa-thumbs-up thumbs-up_red" %>
<% else %>
  <%= link_to article.favorites.count, article_favorites_path(article), method: :post, remote: true, class: "far fa-thumbs-up thumbs-up_blue" %>
<% end %>