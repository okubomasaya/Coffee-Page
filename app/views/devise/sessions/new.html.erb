<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "ユーザー名", placeholder: "Uncle John"%>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", placeholder: "John@com" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを保存 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      
      <% if devise_mapping.omniauthable? %>
        <div class="google-sign-in">
          <%= link_to image_tag("google.sign.in.png"), user_google_oauth2_omniauth_authorize_path, method: :post %><br />
        </div>
      <% end %>
      <!--postメソッドでなければならない-->
      
      <div class="links">
      　<%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>