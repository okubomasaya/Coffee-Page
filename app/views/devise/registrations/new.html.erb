<h2>CoffeePageに登録する</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "ユーザー名", placeholder: "Uncle John" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", placeholder: "John@com" %>
  </div>

  <div class="field">
    <%= f.label :新規パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
  
  
<% end %>

　<div class="actions">
    <%= render "devise/shared/links" %>
  </div>

