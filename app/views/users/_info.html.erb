<div class="container">
    <table class='table table-hover table-borderless'>
      <tb>
        <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg", class:"mt-3 rounded-circle"; %></tr>
        <tr>
      	  <th><%= link_to user.name, user_path(user) %></th>
        </tr>
        <tr>
      	  <th><%= user.profile %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to user.followings.count, user_followings_path(user), id: "following_count" %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to user.followers.count, user_followers_path(user), id: "follower_count" %></th>
        </tr>
        <tr>
          <th class="d-flex justify-content-around mt-3">
            <%= link_to '',user_path(user),class: "fab fa-twitter" %>
            <%= link_to '',user_path(user),class: "fab fa-facebook" %>
            <%= link_to '',user_path(user),class: "fab fa-instagram" %>
          </th>
        </tr>
      </tb>
    </table>
    
    <div class='row'>
      <% if current_user != user %>
        <% if current_user.following?(user) %>
          <span id="follow_button_<%= user.id %>">
            <%= render 'relationships/unfollow-button', user: user %>
          </span>
        <% else %>
          <span id="follow_button_<%= user.id %>">
            <%= render 'relationships/follow-button', user: user %>
          </span>
        <% end %>
      <% else %>
        <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-edit edit_user_#{user.id}" %>
      <% end %>
    </div>
</div>