<table class='table'>
  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg", class:"mt-3 rounded-circle"; %></tr>
  <tr>
	  <th><%= link_to user.name, user_path(user) %></th>
  </tr>
  <tr>
	  <th><%= user.profile %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
  <!--<tr>-->
  <!--  <th>-->
  <!--    %= render "users/follow", users: @user %>-->
  <!--  </th>-->
  <!--</tr>-->
</table>

<div class='row'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= render 'relationships/unfollow-button', user: user %>
      <!--%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>-->
    <% else %>
      <%= render 'relationships/follow-button', user: user %>
      <!--%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>-->
    <% end %>
  <% else %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
</div>
